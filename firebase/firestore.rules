rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile document: users/{uid}
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      // Subcollection: chats
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
