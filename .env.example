# ===========================================
# BACKEND SERVER ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=4000

# ===========================================
# OPENAI CONFIGURATION (REQUIRED)
# ===========================================
# Your OpenAI API key - get it from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# CORS & SECURITY
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:4000
# For production: https://your-frontend.vercel.app
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# OPTIONAL FEATURES
# ===========================================
# Set to true to store chat history in Firestore (requires Firebase setup)
STORE_CHAT_HISTORY=false

# WebSocket server port (if different from main server)
WS_PORT=5006

# Session secret for authentication (change in production)
SESSION_SECRET=dev_session_secret_key_gladgpt_2025
